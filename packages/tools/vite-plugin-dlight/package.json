{
  "name": "vite-plugin-dlight",
  "version": "1.0.0-next.6",
  "description": "DLight transpiler as vite plugin",
  "author": {
    "name": "IanDx",
    "email": "iandxssxx@gmail.com"
  },
  "keywords": [
    "dlight.js",
    "vite-plugin"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsup --sourcemap"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "babel-preset-dlight": "workspace:*",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "typescript": "^5.3.2",
    "vite": "^4.4.9"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "clean": true,
    "dts": true,
    "minify": true
  }
}